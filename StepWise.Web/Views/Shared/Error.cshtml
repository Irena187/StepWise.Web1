@model StepWise.Web.ViewModels.ErrorViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Error"];
}
<h1 class="text-danger">@Localizer["Error"]</h1>
<h2 class="text-danger">@Localizer["ErrorMessage"]</h2>
@if (Model.ShowRequestId)
{
    <p>
        <strong>@Localizer["RequestID"]:</strong> <code>@Model.RequestId</code>
    </p>
}
<h4>@Localizer["ContactSupport"]</h4>