@model IEnumerable<StepWise.Web.ViewModels.Admin.UserManagement.UserManagementIndexViewModel>

@{
    ViewData["Title"] = "User Management - StepWise Admin";

    // Replace this with your real role list if needed.
    var availableRoles = new List<string> { "Admin", "Creator", "User" };
}

<div class="container mt-5">
    <h2 class="mb-4">User Management</h2>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Assign Role</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@string.Join(", ", user.Roles)</td>
                        <td>
                            <form asp-action="AssignRole" method="post" class="d-flex align-items-center gap-2">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <select class="form-select form-select-sm" name="role" required>
                                    <option value="" disabled selected>-- Select Role --</option>
                                    @foreach (var role in availableRoles)
                                    {
                                        if (!user.Roles.Contains(role))
                                        {
                                            <option value="@role">@role</option>
                                        }
                                    }
                                </select>
                                <button type="submit" class="btn btn-sm btn-success">
                                    <i class="fas fa-user-plus me-1"></i>Assign
                                </button>
                            </form>
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <form asp-action="Delete" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
